<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EF1313">

    <TextView
        android:id="@+id/helpDesc1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Memorize the numerical sequence, click ready\nand guess the sequence correctly to get a point for\nevery new memorized number!"
        android:textAlignment="center"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/helpDesc2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/helpDesc1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="66dp"
        android:layout_marginRight="10dp"
        android:text="Easy: 1 new digit each round\nMedium: 2 new digits each round\nHard: 3 new digits each round"
        android:textAlignment="center"
        android:textSize="22sp" />

</RelativeLayout>